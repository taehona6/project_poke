-- 2024 - 02 - 04 --
create database pokedb;

-- user 생성 구문
create user 'pokeUser'@'localhost'
identified by 'mysql' ;

-- user 권한 부여
grant all privileges on pokedb.* to
'pokeUser'@'localhost' with grant option;

-- 권한 설정 완료
flush privileges;

/ --

-- 2024 - 02 - 05 --
create table product(
product_id int auto_increment  primary key,
name varchar(20) not null,
price int not null)

create table member(
member_id varchar(20) primary key,
password varchar(20) not null,
name varchar(20) not null,
birth date not null,
email varchar(50) not null,
phone varchar(20) not null,
point int default 0)

-- 2024 - 02 - 06 --
create table item_storage(
storage_id int auto_increment primary key,
member_id varchar(20) not null,
product_id int not null)

-- 2024 - 02 - 07 --
alter table product add column content varchar(2000) not null


create table pokemon_storage(
storage_id int auto_increment primary key,
member_id varchar(20) not null,
pokemon_id int not null)

create table pokemon(
pokemon_id int primary key,
name varchar(20) not null)

-- 2024 - 02 - 08 --
alter table pokemon add column image varchar(100) not null

create table market_item(
item_id int auto_increment primary key,
pokemon_id int not null,
member_id varchar(20) not null,
price int not null,
start_date datetime,
end_date datetime);

CREATE TRIGGER end_date_trigger BEFORE INSERT ON market_item
FOR EACH ROW SET
    NEW.start_date = IFNULL(NEW.start_date, NOW()),
    NEW.end_date = TIMESTAMPADD(DAY, 3, NEW.start_date);
출처 : https://stackoverflow.com/questions/9190758/mysql-default-date-14-days-for-a-column


-- 2024 - 02 - 13 --
create table pokedex(
member_id varchar(20),
pokemon_id int not null,
register_date datetime default now());